# Hazard Detection API Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8080
ENVIRONMENT=development
LOG_LEVEL=INFO

# Model Configuration 
MODEL_DIR=/app
MODEL_BACKEND=auto
MODEL_INPUT_SIZE=480
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45
MIN_CONFIDENCE_FOR_REPORT=0.6

# OpenVINO Settings
OPENVINO_DEVICE=AUTO
OPENVINO_CACHE_ENABLED=false
OPENVINO_PERFORMANCE_MODE=LATENCY
OPENVINO_ASYNC_INFERENCE=true

# Redis Configuration (required for session persistence)
REDIS_URL=
REDIS_HOST=
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=
REDIS_DB=0

# Cloudinary Configuration (required for image uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# CORS Settings
CORS_ORIGINS=["*"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Report Management
REPORTS_PER_PAGE=20
MAX_REPORTS_PER_REQUEST=100
REPORT_IMAGE_MAX_SIZE_MB=10
REPORT_RETENTION_DAYS=90
AUTO_CREATE_REPORTS=true
GEOCODING_ENABLED=true

# Detection Settings
TRACKING_DISTANCE_THRESHOLD=50
TRACKING_TIME_THRESHOLD=2.0

# External API Keys (optional)
GOOGLE_MAPS_API_KEY=

# Deployment Keys (optional)
RENDER_API_KEY=
RAILWAY_TOKEN=
RAILWAY_ENVIRONMENT_NAME=

# Health Check Settings
HEALTHCHECK_TIMEOUT=120

# Performance Settings
DISABLE_OPENCV=false